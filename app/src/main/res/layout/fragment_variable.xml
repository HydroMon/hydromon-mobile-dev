<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_white"
    tools:context=".ui.variable.VariableFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Variable Control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Set Your Prefered Variable Here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="664dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <GridLayout
                    android:id="@+id/variable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:rowCount="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.060000002">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/tds"
                                android:layout_width="59dp"
                                android:layout_height="59dp"
                                android:src="@drawable/tds"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tds_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:text="TDS"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@id/tds"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.050000012" />

                            <TextView
                                android:id="@+id/tds_value_screen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp"
                                app:layout_constraintTop_toBottomOf="@id/tds_description"
                                app:layout_constraintStart_toEndOf="@id/tds"
                                tools:text="5"
                                />

                            <EditText
                                android:id="@+id/tds_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="range value is 1-14"
                                app:layout_constraintTop_toBottomOf="@id/tds"
                                app:layout_constraintStart_toStartOf="parent"
                                android:inputType="numberDecimal"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ph"
                                android:layout_width="59dp"
                                android:layout_height="59dp"
                                android:src="@drawable/ph"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/ph_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:text="pH"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/ph"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/ph_value_screen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp"
                                app:layout_constraintTop_toBottomOf="@id/ph_description"
                                app:layout_constraintStart_toEndOf="@id/ph"
                                tools:text="5"
                                />

                            <EditText
                                android:id="@+id/ph_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="range value is 1-14"
                                app:layout_constraintTop_toBottomOf="@id/ph"
                                app:layout_constraintStart_toStartOf="parent"
                                android:inputType="numberDecimal"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ec"
                                android:layout_width="59dp"
                                android:layout_height="59dp"
                                android:src="@drawable/ec"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/ec_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:text="EC"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/ec"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/ec_value_screen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp"
                                app:layout_constraintTop_toBottomOf="@id/ec_description"
                                app:layout_constraintStart_toEndOf="@id/ec"
                                tools:text="5"
                                />

                            <EditText
                                android:id="@+id/ec_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="range value is 1-14"
                                app:layout_constraintTop_toBottomOf="@id/ec"
                                app:layout_constraintStart_toStartOf="parent"
                                android:inputType="numberDecimal"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/humidity"
                                android:layout_width="59dp"
                                android:layout_height="59dp"
                                android:src="@drawable/humidity"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/humidity_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:text="Humidity"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/humidity"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/humidity_value_screen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp"
                                app:layout_constraintTop_toBottomOf="@id/humidity_description"
                                app:layout_constraintStart_toEndOf="@id/humidity"
                                tools:text="5"
                                />

                            <EditText
                                android:id="@+id/humidity_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="range value is 1-14"
                                app:layout_constraintTop_toBottomOf="@id/humidity"
                                app:layout_constraintStart_toStartOf="parent"
                                android:inputType="numberDecimal"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/temperature"
                                android:layout_width="59dp"
                                android:layout_height="59dp"
                                android:src="@drawable/temperature"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/temperature_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:text="Temperature"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/temperature"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/temperature_value_screen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp"
                                app:layout_constraintTop_toBottomOf="@id/temperature_description"
                                app:layout_constraintStart_toEndOf="@id/temperature"
                                tools:text="5"
                                />

                            <EditText
                                android:id="@+id/temperature_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="range value is 1-14"
                                app:layout_constraintTop_toBottomOf="@id/temperature"
                                app:layout_constraintStart_toStartOf="parent"
                                android:inputType="numberDecimal"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/light_intensity"
                                android:layout_width="59dp"
                                android:layout_height="59dp"
                                android:src="@drawable/light_intensity"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/light_intensity_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:text="Light Intensity"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/light_intensity"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/light_intensity_value_screen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp"
                                app:layout_constraintTop_toBottomOf="@id/light_intensity_description"
                                app:layout_constraintStart_toEndOf="@id/light_intensity"
                                tools:text="5"
                                />

                            <EditText
                                android:id="@+id/light_intensity_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="range value is 1-14"
                                app:layout_constraintTop_toBottomOf="@id/light_intensity"
                                app:layout_constraintStart_toStartOf="parent"
                                android:inputType="numberDecimal"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/brown_wood"
                    android:text="Save"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/variable" />

                <Button
                    android:id="@+id/undo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/brown_wood"
                    android:text="Undo"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/save_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>